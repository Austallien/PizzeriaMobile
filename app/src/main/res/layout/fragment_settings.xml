<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.FragmentSettings">

    <ImageView
        android:id="@+id/imageViewFragmentSettingsImage"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/ic_drawer_settings_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewFragmentSettingsInscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/serviceInscription"
        app:layout_constraintEnd_toEndOf="@+id/imageViewFragmentSettingsImage"
        app:layout_constraintStart_toStartOf="@+id/imageViewFragmentSettingsImage"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFragmentSettingsImage" />
</androidx.constraintlayout.widget.ConstraintLayout>