<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pizzeriamobile">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".logic.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PizzeriaMobile"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.ActivityAuthentication"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ActivityNavigation"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.DayNight"/>
        <activity
            android:name=".activity.ActivityDialog"
            android:exported="true"
            android:label="@string/alertActivityTitle"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Dialog" />

    </application>
</manifest>